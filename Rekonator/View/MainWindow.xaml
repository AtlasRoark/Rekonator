            </DataGrid.CellStyle>
        </DataGrid >-->


        <StackPanel Grid.Row="2"
                    Grid.Column="1">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Content="Match"
                        Name="ButtonMatch"
                        HorizontalAlignment="Center" Margin="0,5,0,0"
                        Click="ButtonMatch_Click" />
                <ToggleButton IsChecked="{Binding ElementName=BottomFlyout, Path=IsOpen}"
                              Cursor="Hand"
                              Margin="10,0,0,0">
                </ToggleButton>
            </StackPanel>
        </StackPanel>
        <local:ResultUserControl  Grid.Row="3"
                                  Grid.Column="1"
                                  ResultSet="{Binding MatchResultSet}" />

        <!--<DataGrid x:Name="dgMatch"
                  Grid.Row="3"
                  Grid.Column="1"
                  ItemsSource="{Binding MatchSet}">
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell"
                       BasedOn="{StaticResource {x:Type DataGridCell}}">
                    <EventSetter Event="PreviewKeyDown"
                                 Handler="DataGridCell_PreviewKeyDown" />
                </Style>
            </DataGrid.CellStyle>
        </DataGrid>-->
    </Grid>
</controls:MetroWindow>
